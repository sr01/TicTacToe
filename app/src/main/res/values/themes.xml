<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicTacToe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_teal_500</item>
        <item name="colorPrimaryVariant">@color/md_teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_yellow_400</item>
        <item name="colorSecondaryVariant">@color/md_yellow_A100</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="Theme.TicTacToe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TicTacToe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TicTacToe.ToolbarStyle">
        <item name="popupTheme">@style/Theme.TicTacToe.PopupOverlay</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">22sp</item>
<!--        <item name="android:textColor">@color/white</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.TicTacToe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.TicTacToe.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>